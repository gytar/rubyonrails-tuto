<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
<div>
    <span><%= link_to "Home", root_path %> |</span>
    <span><%= link_to "Edit", edit_article_path(@article) %> |</span>
    <span> <%= link_to "Delete", article_path(@article), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
    } %> </span>
</div>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
